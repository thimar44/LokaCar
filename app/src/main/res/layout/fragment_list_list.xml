<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingTop="4dp">



    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/colorDark"
        app:cardCornerRadius="15dp"
        android:layout_margin="4dp"
        app:cardElevation="5dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="0dp">

                <ImageView
                    android:id="@+id/photoVehicule"
                    android:layout_height="75dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:paddingBottom="0dp"
                    android:src="@drawable/voitureok" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:paddingBottom="0dp">

                    <TextView
                        android:id="@+id/marqueVehicule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:hint="Marque" />

                    <TextView
                        android:id="@+id/disignationVehicule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:hint="Desigration" />
                    <TextView
                        android:id="@+id/immatriculationVehicule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:hint="35-DJK-31" />

                    <TextView
                        android:id="@+id/typeEssence"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Type d'essence" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:paddingBottom="0dp">

                    <TextView
                        android:id="@+id/prixJour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:hint="Prix / jour" />

                    <TextView
                        android:id="@+id/typeVehicule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Type Vehicule" />

                    <TextView
                        android:id="@+id/kilometres"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:hint="Kilomètres" />

                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/messageCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Louer ce véhicule"
                    android:textColor="@android:color/holo_blue_bright"
                    android:textSize="20dp" />

            </RelativeLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>