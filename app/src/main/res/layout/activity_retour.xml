<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="véhicule"
                android:textAlignment="center"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">


                <ImageView
                    android:id="@+id/photoVehicule"
                    android:layout_height="75dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:paddingBottom="0dp"
                    android:src="@drawable/voitureok" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/marque"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="marque"
                        android:textColor="@color/colorPrimary700" />

                    <TextView
                        android:id="@+id/designation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="designation"
                        android:textColor="@color/colorPrimary700" />

                    <TextView
                        android:id="@+id/typeCarburant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="typeCarburant"
                        android:textColor="@color/colorPrimary700" />

                    <TextView
                        android:id="@+id/typeVehicule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="typeVehicule"
                        android:textColor="@color/colorPrimary700" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/immatriculation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="immatriculation"
                        android:textColor="@color/colorPrimary700" />

                    <TextView
                        android:id="@+id/kilometrage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="kilometrage"
                        android:textColor="@color/colorPrimary700" />

                    <TextView
                        android:id="@+id/prixJour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="prixJour"
                        android:textColor="@color/colorPrimary700" />
                </LinearLayout>


            </LinearLayout>

            <include layout="@layout/horizontal_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="client"
                    android:textAlignment="center"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/clientRetourNom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="nom du client"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/clientRetourPreNom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="prenom du client"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/clientRetourTel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="téléphone du client"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/clientRetourEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="email du client"
                            android:textSize="12dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/clientRetourAdresse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="adresse du client"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/clientRetourCp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="code postal du client"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/clientRetourVille"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="ville du client"
                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <include layout="@layout/horizontal_line"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="location"
                android:textAlignment="center"
                android:textSize="20dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_form"
                android:paddingRight="@dimen/padding_form">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:text="Date Retrait : " />

                <TextView
                    android:id="@+id/locationRetourDateDebut"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_form"
                android:paddingRight="@dimen/padding_form">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:text="Durée : " />

                <TextView
                    android:id="@+id/locationRetourDuree"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_form"
                android:paddingRight="@dimen/padding_form">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:text="Prix : " />

                <TextView
                    android:id="@+id/locationRetourPrix"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_form"
                android:paddingRight="@dimen/padding_form">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:text="Km au retour : " />

                <EditText
                    android:id="@+id/locationRetourKm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:inputType="number" />
            </LinearLayout>

            <include layout="@layout/horizontal_line"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Ajouter une photo de retour"
                        android:background="@drawable/shape_button"
                        android:onClick="addPhotoLouer"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutPictures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

            <include layout="@layout/horizontal_line"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="50dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="validerRetour"
                    android:background="@drawable/shape_button"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>